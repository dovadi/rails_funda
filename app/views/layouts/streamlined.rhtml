<html>
<head>
  <title><%= controller.action_name %></title>
  <%= streamlined_auto_discovery_link_tag %>	
  <%= javascript_include_tag :defaults, "prototype",'jquery','live_validation', 'streamlined', '/windows_js/javascripts/window', '/overlib/overlib', 'tabber', 'tabber-minimized',:cache=> true  %>
  <%= stylesheet_link_tag '/windows_js/themes/mac_os_x','/windows_js/themes/default','as_style','streamlined','menu', 'tabber', 'live_validation', :cache=> true %>
</head>
<body>
	<div id="header">
		<span id="branding"><%= streamlined_branding %></span>
	  	<div id="top_nav"><%= render(:partial => 'shared/streamlined/top_menu') %></div>
	</div>
	 <div id="left">
	   <%= render(:partial => "shared/streamlined/side_menu")%>
	   <% if advanced_filtering %>
         <%= render_streamlined_file '/shared/_filter.rhtml' %>	   
       <% end %>
	 </div>
	 <div id="center">
	   <% if streamlined_breadcrumb %>
	   	 <%= render_breadcrumb %>
	   <% end %>
	   <%= image_tag 'streamlined/loading.gif', :id=>'spinner', :style=>"display:none;" %>
	   <div id="content_for_layout"><%= @content_for_layout %></div>
	 </div>
	<div id="footer">
	  <%= streamlined_footer %>
	</div>
</body>
</html>
