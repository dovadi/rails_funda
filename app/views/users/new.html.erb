<%content_for(:title, "Sign up as a new user") %>

<%content_for(:left, error_messages_for(:user)) %>

<h1>Sign up as a new user</h1>
<% @user.password = @user.password_confirmation = nil %>

<% form_for :user, :url => users_path do |f| -%>

<fieldset class='form'>
  <ol class="nospace form">
    <li>
      <%= label_tag 'user_login', "Login" %><br/>
      <%= f.text_field :login, :class=>"text" %>
    </li>
    <li>
      <%= label_tag 'user_email', "Email" %><br/>
      <%= f.text_field :email, :class=>"text" %>
    </li>
    <li>
      <%= label_tag 'user_password', "Password" %><br/>
      <%= f.password_field :password, :class=>"text" %>
    </li>
    <li>
      <%= label_tag 'user_password_confirmation', 'Confirm Password' %><br/>
      <%= f.password_field :password_confirmation, :class=>"text" %>
    </li>
    <li>
      <%= submit_tag 'Sign up', :class=>"submit", :id=>"user_submit"%>
    </li>
  </ol>
</fieldset> 



<% end -%>
